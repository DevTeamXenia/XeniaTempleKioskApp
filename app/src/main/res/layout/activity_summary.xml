<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.SummaryActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/summary_head_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name : Abhijith"
            android:textSize="22sp"
            android:layout_marginStart="100dp"
            android:fontFamily="@font/poppins_regular"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number : +91 9037554466"
            android:textSize="22sp"
            android:fontFamily="@font/poppins_regular"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="100dp"
            android:textColor="@color/black"
            />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:layout_above="@+id/below_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/summary_list_bg">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:background="@drawable/table_top_bg"
                android:stretchColumns="0,1,2,3,4,5">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="No."
                        android:textSize="20sp"
                        android:fontFamily="@font/montserrat"
                        android:textColor="@color/black"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="Vazhipadu Names"
                        android:textSize="20sp"
                        android:fontFamily="@font/montserrat"
                        android:textColor="@color/black"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textSize="20sp"
                        android:fontFamily="@font/montserrat"
                        android:textColor="@color/black"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Janma Nakshatra"
                        android:textSize="20sp"
                        android:fontFamily="@font/montserrat"
                        android:textColor="@color/black"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Amount"
                        android:textSize="20sp"
                        android:fontFamily="@font/montserrat"
                        android:textColor="@color/black"
                        android:gravity="center"/>

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_delete"
                        android:gravity="center"/>
                </TableRow>
            </TableLayout>
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/below_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_more"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginEnd="30dp"
                android:textSize="20sp"
                android:text="Select More"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_medium"
                android:background="@drawable/btn_bg" />

            <Button
                android:id="@+id/btn_pay"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginStart="30dp"
                android:textSize="20sp"
                android:text="Proceed to Pay â‚¹ 250"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_medium"
                android:background="@drawable/textview_board"/>

        </LinearLayout>


    </RelativeLayout>


</LinearLayout>