<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".ui.LanguageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/main_background">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@color/smokey_white">

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:layout_weight="1">

            <ImageView
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:src="@drawable/temple_name"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="30dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="50dp"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/language_icon"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="30dp"
                    android:src="@drawable/ic_language" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/language_icon"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Choose your language"
                    android:textColor="@color/secondaryColor"
                    android:textSize="20sp" />


            </RelativeLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <RelativeLayout
                        android:id="@+id/card_en"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/card_background">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/space"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_en" />

                        <Space
                            android:id="@+id/space"
                            android:layout_width="wrap_content"
                            android:layout_height="5dp"
                            android:layout_centerInParent="true"
                            tools:ignore="DuplicateIds" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/space"
                            android:fontFamily="@font/montserrat_semibold"
                            android:text="@string/english"
                            android:textAlignment="center"
                            android:textColor="@color/secondaryColor"
                            android:textSize="20sp" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/card_background">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/space"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/ic_mal" />

                        <Space
                            android:id="@+id/space"
                            android:layout_width="wrap_content"
                            android:layout_height="10dp"
                            android:layout_centerInParent="true"
                            tools:ignore="DuplicateIds" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/space"
                            android:fontFamily="@font/montserrat_semibold"
                            android:text="@string/malayalam"
                            android:textAlignment="center"
                            android:textColor="@color/secondaryColor"
                            android:textSize="20sp" />

                    </RelativeLayout>


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/card_background">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/space"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_tamil" />

                        <Space
                            android:id="@+id/space"
                            android:layout_width="wrap_content"
                            android:layout_height="10dp"
                            android:layout_centerInParent="true"
                            tools:ignore="DuplicateIds" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/space"
                            android:fontFamily="@font/montserrat_semibold"
                            android:text="@string/tamil"
                            android:textAlignment="center"
                            android:textColor="@color/secondaryColor"
                            android:textSize="20sp" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/card_background">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/space"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/ic_kannada" />

                        <Space
                            android:id="@+id/space"
                            android:layout_width="wrap_content"
                            android:layout_height="10dp"
                            android:layout_centerInParent="true"
                            tools:ignore="DuplicateIds" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/space"
                            android:fontFamily="@font/montserrat_semibold"
                            android:text="@string/kannada"
                            android:textAlignment="center"
                            android:textColor="@color/secondaryColor"
                            android:textSize="20sp" />

                    </RelativeLayout>


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/card_background">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/space"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/ic_telugu" />

                        <Space
                            android:id="@+id/space"
                            android:layout_width="wrap_content"
                            android:layout_height="10dp"
                            android:layout_centerInParent="true"
                            tools:ignore="DuplicateIds" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/space"
                            android:fontFamily="@font/montserrat_semibold"
                            android:text="@string/telugu"
                            android:textAlignment="center"
                            android:textColor="@color/secondaryColor"
                            android:textSize="20sp" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/card_background">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/space"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/ic_hindi" />

                        <Space
                            android:id="@+id/space"
                            android:layout_width="wrap_content"
                            android:layout_height="10dp"
                            android:layout_centerInParent="true"
                            tools:ignore="DuplicateIds" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/space"
                            android:fontFamily="@font/montserrat_semibold"
                            android:text="@string/hindi"
                            android:textAlignment="center"
                            android:textColor="@color/secondaryColor"
                            android:textSize="20sp" />

                    </RelativeLayout>


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="30dp"
                        android:layout_marginEnd="30dp"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/img_xenia_logo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txt_powered_by"
                            android:layout_centerInParent="true"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="40dp"
                            android:src="@drawable/xenia_logo" />

                        <TextView
                            android:id="@+id/txt_powered_by"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_light"
                            android:text="p o w e r e d   b y"
                            android:layout_alignStart="@+id/img_xenia_logo"
                            android:layout_marginStart="50dp"
                            android:textAlignment="center"
                            android:textColor="@color/secondaryColor"
                            android:textSize="16sp" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="26dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        android:layout_weight="1">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_light"
                            android:text="b a n k i n g p a r t n e r"
                            android:layout_alignStart="@+id/img_southIndian_logo"
                            android:layout_marginStart="55dp"
                            android:layout_marginTop="23dp"
                            android:textAlignment="center"
                            android:textColor="@color/secondaryColor"
                            android:textSize="12sp" />

                        <ImageView
                            android:id="@+id/img_southIndian_logo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginEnd="20dp"
                            android:src="@drawable/ic_si" />


                    </RelativeLayout>


                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>


</RelativeLayout>

