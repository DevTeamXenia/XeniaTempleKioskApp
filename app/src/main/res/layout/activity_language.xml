<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".ui.screens.LanguageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:weightSum="100"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50">

            <ImageView
                android:id="@+id/img_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:contentDescription="@string/todo"
                android:scaleType="fitXY" />


        </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="50"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/language_icon"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:contentDescription="@string/todo"
                android:src="@drawable/ic_language" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/language_icon"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/choose_your_language"
                android:textColor="@color/secondaryColor"
                android:textSize="20sp" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:baselineAligned="false"
            android:orientation="vertical"
            tools:ignore="NestedWeights">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:ignore="UselessParent">


                <RelativeLayout
                    android:id="@+id/card_english"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/card_background">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/space1"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/segoe_ui_bold"
                        android:text="e Kanike"
                        android:textColor="@color/white"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/space1"
                        android:layout_width="wrap_content"
                        android:layout_height="5dp"
                        android:layout_centerInParent="true"
                        tools:ignore="DuplicateIds" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/space1"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="@string/english"
                        android:textAlignment="center"
                        android:textColor="@color/secondaryColor"
                        android:textSize="20sp" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/card_malayalam"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/card_background">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/space2"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/segoe_ui_bold"
                        android:text="ഇ-കാണിക്ക"
                        android:textColor="@color/white"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/space2"
                        android:layout_width="wrap_content"
                        android:layout_height="10dp"
                        android:layout_centerInParent="true"
                        tools:ignore="DuplicateIds" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/space2"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="@string/malayalam"
                        android:textAlignment="center"
                        android:textColor="@color/secondaryColor"
                        android:textSize="20sp" />

                </RelativeLayout>


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:baselineAligned="false"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:ignore="UselessParent">


                <RelativeLayout
                    android:id="@+id/card_tamil"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/card_background">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/space3"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/segoe_ui_bold"
                        android:text="இ கனிகே"
                        android:textColor="@color/white"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        tools:ignore="TextContrastCheck" />

                    <View
                        android:id="@+id/space3"
                        android:layout_width="wrap_content"
                        android:layout_height="10dp"
                        android:layout_centerInParent="true"
                        tools:ignore="DuplicateIds" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/space3"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="@string/tamil"
                        android:textAlignment="center"
                        android:textColor="@color/secondaryColor"
                        android:textSize="20sp" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/card_kannada"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/card_background">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/space4"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/segoe_ui_bold"
                        android:text="ಇ ಕಾಣಿಕೆ"
                        android:textColor="@color/white"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/space4"
                        android:layout_width="wrap_content"
                        android:layout_height="10dp"
                        android:layout_centerInParent="true" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/space4"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="@string/kannada"
                        android:textAlignment="center"
                        android:textColor="@color/secondaryColor"
                        android:textSize="20sp" />

                </RelativeLayout>


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:baselineAligned="false"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/card_telugu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/card_background">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/space5"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/segoe_ui_bold"
                        android:text="ఇ కనికే"
                        android:textColor="@color/white"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/space5"
                        android:layout_width="wrap_content"
                        android:layout_height="10dp"
                        android:layout_centerInParent="true" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/space5"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="@string/telugu"
                        android:textAlignment="center"
                        android:textColor="@color/secondaryColor"
                        android:textSize="20sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/card_hindi"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/card_background">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/space6"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/segoe_ui_bold"
                        android:text="ई हुंडी"
                        android:textColor="@color/white"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/space6"
                        android:layout_width="wrap_content"
                        android:layout_height="10dp"
                        android:layout_centerInParent="true" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/space6"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="@string/hindi"
                        android:textAlignment="center"
                        android:textColor="@color/secondaryColor"
                        android:textSize="20sp" />

                </RelativeLayout>


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="100dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                tools:ignore="UselessParent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="40dp"
                    android:layout_weight="2"
                    android:contentDescription="@string/todo">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/devasam_logo"
                        android:contentDescription="@string/todo"
                        tools:ignore="ImageContrastCheck" />


                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_weight="1"
                    android:contentDescription="@string/todo">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_xenia"
                        android:contentDescription="@string/todo"
                        tools:ignore="ImageContrastCheck" />


                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_weight="1"
                    android:contentDescription="@string/todo">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_sib"
                        android:contentDescription="@string/todo"
                        tools:ignore="ImageContrastCheck" />


                </RelativeLayout>



            </LinearLayout>
        </LinearLayout>


    </LinearLayout>


    </LinearLayout>




</RelativeLayout>

