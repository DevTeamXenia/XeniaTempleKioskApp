<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".ui.screens.LanguageActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:background="@drawable/home_side_background">

        <RelativeLayout
            android:id="@+id/left_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/home_card_background">

            <ImageView
                android:id="@+id/home_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@+id/txt_home"
                android:contentDescription="@string/todo"
                android:scaleType="fitEnd"
                android:src="@drawable/ic_home" />

            <TextView
                android:id="@+id/txt_home"
                android:layout_width="72dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/secondaryColor"
                android:textSize="22sp"
                tools:ignore="RelativeOverlap" />

        </RelativeLayout>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:alpha="0.1"
            android:scaleType="fitEnd"
            android:src="@drawable/home_side_bottom_img" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_kanika"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="100dp"
            android:fontFamily="@font/segoe_ui_bold"
            android:textAlignment="center"
            android:textColor="@color/secondaryColor"
            android:textSize="90sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="4">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/card_melkavu"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/bg_card"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/img_melkavu"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:contentDescription="@string/todo"
                        android:src="@drawable/ic_melkavu" />


                </RelativeLayout>

                <TextView
                    android:id="@+id/txt_melkavu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:gravity="center"
                    android:textColor="@color/secondaryColor"
                    android:textSize="30sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/card_keezhkavu"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/bg_card"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/img_keezhkavu"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:contentDescription="@string/todo"
                        android:src="@drawable/ic_kizhkavu" />


                </RelativeLayout>

                <TextView
                    android:id="@+id/txt_keezhkavu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:gravity="center"
                    android:textColor="@color/secondaryColor"
                    android:textSize="30sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/card_shiva"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/bg_card"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/img_shiva"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:contentDescription="@string/todo"
                        android:src="@drawable/ic_shiva" />


                </RelativeLayout>

                <TextView
                    android:id="@+id/txt_shiva"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:gravity="center"
                    android:textColor="@color/secondaryColor"
                    android:textSize="30sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/card_ayyappa"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/bg_card"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/img_ayyappa"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:contentDescription="@string/todo"
                        android:src="@drawable/ic_ayyappan" />


                </RelativeLayout>

                <TextView
                    android:id="@+id/txt_ayyappa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:gravity="center"
                    android:textColor="@color/secondaryColor"
                    android:textSize="30sp" />


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>