<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:name=".XeniaTempleKiosk"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TempleKiosk"
        tools:targetApi="31">
        <activity
            android:name=".ui.screens.LoginActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name=".ui.screens.HomeActivity"
            android:exported="false" />
        <activity
            android:name=".ui.screens.VazhipaduDetailActivity"
            android:exported="false" />
        <activity
            android:name=".ui.screens.SummaryActivity"
            android:exported="false" />
        <activity
            android:name=".ui.screens.VazhipaduActivity"
            android:exported="false" />
        <activity
            android:name=".ui.screens.PaymentActivity"
            android:exported="false" />
        <activity
            android:name=".ui.screens.DonationActivity"
            android:windowSoftInputMode="adjustPan|adjustResize"
            android:exported="false" />
        <activity
            android:name=".ui.screens.SelectionActivity"
            android:exported="false" />
        <activity
            android:name=".ui.screens.LanguageActivity"
            android:exported="false"/>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>