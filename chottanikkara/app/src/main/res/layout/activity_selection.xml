<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".ui.screens.LanguageActivity">

    <RelativeLayout
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/home_side_background">

        <RelativeLayout
            android:id="@+id/left_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/space_left"
            android:layout_centerInParent="true"
            android:background="@drawable/home_card_background">

            <ImageView
                android:id="@+id/home_icon"
                android:layout_width="20dp"
                android:layout_height="18dp"
                android:layout_centerInParent="true"
                android:layout_marginEnd="15dp"
                android:layout_toLeftOf="@+id/txt_home"
                android:scaleType="fitEnd"
                android:src="@drawable/ic_home" />

            <TextView
                android:id="@+id/txt_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/poppins_regular"
                android:text="Home"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </RelativeLayout>

        <Space
            android:id="@+id/space_left"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_centerInParent="true" />

        <RelativeLayout
            android:id="@+id/home_left_language"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_below="@+id/space_left"
            android:layout_centerInParent="true"
            android:background="@drawable/language_card_backgorund">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:layout_toLeftOf="@+id/txt_language"
                android:scaleType="fitEnd"
                android:src="@drawable/ic_language" />

            <TextView
                android:id="@+id/txt_language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/poppins_regular"
                android:text="Language"
                android:textColor="@color/primaryColor"
                android:textSize="16sp" />

        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:src="@drawable/home_side_bottom_img"
            android:scaleType="fitEnd"
            android:alpha="0.1"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome!"
            android:textColor="@color/secondaryColor"
            android:layout_marginTop="100dp"
            android:layout_marginStart="40dp"
            android:textSize="45sp"
            android:layout_marginBottom="100dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <androidx.cardview.widget.CardView
                android:id="@+id/card_Vazhipadu"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                app:cardCornerRadius="6dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                app:cardElevation="0dp"
                app:cardMaxElevation="0dp">

                <ImageView
                    android:src="@drawable/card_background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        android:layout_above="@+id/space1"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/ic_vazhipadu" />

                    <Space
                        android:id="@+id/space1"
                        android:layout_width="wrap_content"
                        android:layout_height="10dp"
                        android:layout_centerInParent="true"
                        tools:ignore="DuplicateIds" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/space1"
                        android:fontFamily="@font/montserrat_semibold"
                        android:textAlignment="center"
                        android:textSize="28sp"
                        android:textColor="@color/white"
                        android:text="Vazhipadu" />

                </RelativeLayout>



            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_donation"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_gravity="center"
                app:cardCornerRadius="6dp"
                android:layout_marginTop="10dp"
                app:cardElevation="0dp"
                app:cardMaxElevation="0dp">

                <ImageView
                    android:src="@drawable/card_background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        android:layout_above="@+id/space2"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/ic_donation" />

                    <Space
                        android:id="@+id/space2"
                        android:layout_width="wrap_content"
                        android:layout_height="10dp"
                        android:layout_centerInParent="true"
                        tools:ignore="DuplicateIds" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/space2"
                        android:fontFamily="@font/montserrat_semibold"
                        android:textAlignment="center"
                        android:textSize="28sp"
                        android:textColor="@color/white"
                        android:text="Donation" />

                </RelativeLayout>



            </androidx.cardview.widget.CardView>
        </LinearLayout>


    </LinearLayout>



</LinearLayout>